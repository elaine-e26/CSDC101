int main(){
int number, choice;

do {
  cout << "Enter a number: ";
  cin>> number;
  
  cout<< "Multiplication Table of " << number << endl;
  for (int i = 1; i <= 10; i++){
  cout<< i << " x " << number << " = " << i*number << endl;
  }
  cout<< "Do you want to try another number? 1=Yes, 0=No" << endl;
  cin>> choice;
}
while(choice == 1); //condition to repeat the multiplication table

cout << "Thank you for using the program!" << endl;

return 0;
}
