#include <iostream>
using namespace std;

int main(){

int first = 0, second = 1, next, rows;
cout<< "Enter a number: ";
cin>> rows;

for(int i = 1; i <= rows; i++){  //number of rows or lines for the triangle

  for(int j = 1; j <= i; j++){ //values or the fibonacci sequence taht makes up the triangle
  cout<< first << " ";
  next = first + second;
  first = second;
  second = next;

}

cout<< endl;
}

return 0;
}
